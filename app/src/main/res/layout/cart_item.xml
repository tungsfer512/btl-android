<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_item_cart"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_image"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCartItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/a"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleCartItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Men's Tie-Dye T-Shirt Nike Sportswear"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/priceCartItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="$99 (+$4.00 Tax)"
                android:textColor="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"

                >

                <ImageButton
                    android:id="@+id/upQuantity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/roundedbutton"
                    app:srcCompat="@drawable/icon_up_24"

                    />

                <TextView
                    android:id="@+id/quantityCartItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="1dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/downQuantity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/roundedbutton"
                    app:srcCompat="@drawable/icon_slide_down_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/deleteCart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/roundedbutton"
                        app:srcCompat="@drawable/icon_cancel_24" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>